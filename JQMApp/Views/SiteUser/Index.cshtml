@{
    @model IEnumerable<JQMApp.App.Models.GraphicItem>
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <title>JQM</title>

        <link href="~/Content/jquery.mobile.theme-1.1.2.min.css" rel="stylesheet" />
        <link href="~/Content/jquery.mobile-1.1.2.min.css" rel="stylesheet" />
        <link href="~/Content/jqm.css" rel="stylesheet" />

        <script src="~/Scripts/jquery-1.8.2.js"></script>
        <script src="~/Scripts/jquery.cookie.js"></script>
        <script src="~/Scripts/UserPage.js"></script>
        <script src="~/Scripts/jquery.mobile-1.1.2.min.js"></script>
        <script src="~/Scripts/jquery.mThumbnailScroller.js"></script>

    </head>
    <body style="margin:0">
        <div id="userhome" data-role="page" data-theme="b" data-content-theme="b" data-url="/SiteUser/Index">
            <div data-role="header" data-theme="b" data-position="fixed">
                <h1>Images for @(ViewBag.UserEmail)</h1>
                <a rel="external" href="javascript:GoHome()" data-icon="forward">Back</a> 
            </div>
            <div class="showContainer">
                <ul id="pgwSlide" style="list-style-type:none">
                    @foreach (var slide in Model)
                    {
                        <li><img src="http://@Request.ServerVariables["HTTP_HOST"]/JQMApp/@slide.Url"></img></li>
                    }
                </ul>                
            </div>
        </div>

    </body>
</html>
<script>
    $(document).ready(function() {
        var W = $(window).width();
        var actualWidth = W > 966 ? 966 : W;
        actualWidth -= 100;
        $('.showContainer').css({width:actualWidth + 'px'});
        $('#pgwSlide li img').attr('width', '100%');
    });
    
    function GoHome() {
        location.href = $.cookie('location') + "?mode=back";
    }
</script>